.top {
    width: 100%;
    height: 680rpx;
}

.tabbar {
    position: fixed;
    bottom: 0;
}

.sku-pending {
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    display:flex;
    flex-direction:row;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    margin: 10rpx 0;
    font-size: 28rpx;
    padding: 0 30rpx;
}
.specs > text:first-child {
    font-size: 24rpx;
    color: #999999;
}
.specs > text:nth-child(2) {
    color: #157658;
}

.explain {
    margin-top: 10rpx;
    background-color: #ffffff;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    display:flex;
    flex-direction:row;
    justify-content: center;
    align-items: center;
}

.detail-img {
    width: 100%;
    display: flex;
}

