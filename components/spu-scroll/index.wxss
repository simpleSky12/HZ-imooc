.container{
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    width: 100%;
    padding: 42rpx 0 34rpx 28rpx;
}
.spu-title{
    width: 694rpx;
    height: 90rpx;
}

.scroll-view{
    margin-top: 28rpx;
}

.inner{
    display:flex;
    flex-direction:row;
}

.spu-container{
    display:flex;
    flex-direction:column;
    align-items: center;
    margin-right: 60rpx;
}
.spu-img{
    width: 160rpx;
    height: 160rpx;
}
.spu-text{
    font-size: 20rpx;
    margin-top: 20rpx;
    color: #666666;
}

.price-unit,.price-value{
    font-size:26rpx !important;
    color: #157658 !important;
}
.price-unit{
    font-size: 24rpx !important;
}
