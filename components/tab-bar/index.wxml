<view class="container">
    <view class="icons">
        <view bind:tap="onGoHome">
            <l-icon name="home" size="46" l-class="iconfont"></l-icon>
            <text>首页</text>
        </view>
        <view bind:tap="onGoCart">
            <l-badge shape="circle" value="100" max-count="99">
                <l-icon name="cart" size="44" color="#157658"></l-icon>
            </l-badge>
            <text>购物车</text>
        </view>
    </view>
    <view class="cart btn-font" bind:tap="onAddToCart">
        <text>加入购物车</text>
    </view>
    <view class="buy btn-font" bind:tap="onBuy">
        <text>立即购买</text>
    </view>
</view>
