.container{
    background-color: #fff;
    box-sizing: border-box;
    max-height: 700rpx;
    min-height: 700rpx;
    margin-bottom: 100rpx;
}
.inner-container{
    padding: 30rpx 30rpx 0 30rpx;
}

.sku-preview {
    display:flex;
    flex-direction:row;
}

.sku-description {
    display:flex;
    flex-direction:column;
    justify-content: space-between;
    margin-left: 40rpx;
}

.sku-img {
    width: 160rpx;
    height: 160rpx;
}

.price-row {
    display:flex;
    flex-direction:row;
    align-items: baseline;
}

.discount-price {
    margin-left: 20rpx;
}

.sku-pending {
    font-size: 20rpx;
}
.sku-pending>text:first-child {
    color: #999999;
}
.sku-pending>text:nth-child(2){
    color: #666666;
}

.hr {
    width: 690rpx;
    height: 2rpx;
    margin-top: 30rpx;
    background-color: #e9e9e9;
}

.stock , .stock-pinch{
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #999;
}
.stock-pinch{
    color: #D20109 !important;
}

.counter-container{
    display:flex;
    flex-direction:row;
    justify-content: space-between;
    align-items: center;
    margin-top: 34rpx;
    padding-bottom: 100rpx;
}
.counter-container text{
    color: #555555;
    font-size: 24rpx;
}

.bottom-btn {
    display:flex;
    flex-direction:row;
    justify-content: center;
    align-items: center;
    background-color: #333333;
    height: 100rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
}
.bottom-btn text{
    color: #fff;
}
.out-stock {
    background-color: #DCEBE6;
}
