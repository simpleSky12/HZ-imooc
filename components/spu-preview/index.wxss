.container{
    display:flex;
    flex-direction:column;
    box-shadow:0px 0px 8px 0px rgba(221,221,221,0.5);
    width: 340rpx;
    margin-bottom: 30rpx;
    background-color: #fff;
}

.img{
    width: 100%;
    /*height: 360rpx;*/
}

.content-container{
    display:flex;
    flex-direction:column;
}
.title{
    font-size: 28rpx;
    color: #333333;
}

.tags{
    display:flex;
    flex-direction:row;
    flex-wrap: wrap;
    margin-top: 6rpx;
    margin-bottom: 8rpx;
}

.l-tag {
    background-color: #DCEBE6 !important;
    color: #157658 !important;
    padding-left: 6rpx !important;
    padding-right: 6rpx !important;
    margin-right: 5rpx !important;
}
.price-row{
    display:flex;
    flex-direction:row;
}

.discount-price{
    margin-left: 20rpx;
}

.subtitle{
    font-size: 24rpx;
    font-weight: 300;
    color: #888;
    margin-top:6rpx;
}



